@inject ChannelManager channelManager;

@{
    var Model = channelManager.RecentlyCompletedJobs;
    var queueCount = channelManager.JobCount;
}
<div>
    @if (queueCount > 0)
    {
        <div>
            <span>Derzeit sind @queueCount Anfragen in der Warteschlange</span>
        </div>
    }
    @if (Model.Count > 0)
    {
        <h2>Kürzlich gesucht</h2>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card">
                        <picture class="card-img-top" style="display: flex; align-items: center; height: 300px">
                            <img src="@item.ProductImageUrl" class="img-fluid" style="width: auto; max-height: 100%; margin: 0 auto; display: block;" alt="@item.ProductName">
                        </picture>
                        <div class="card-body">
                            <h5 class="card-title">@item.ProductName</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@item.TimeCreated.ToGermanDateTimezoneString() (@((int)Math.Ceiling((item.TimeCompleted - item.TimeCreated).TotalMinutes))min)</h6>
                            @if (item.Success)
                            {
                                <a href="#" data-bs-toggle="modal" data-bs-target="#result-@item.Id.ToString("N")" class="btn btn-primary">Preise zeigen</a>
                            }
                            else
                            {
                                <span>Error</span>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        @foreach (var item in Model)
        {
            if (!item.Success)
            {
                continue;
            }
            <div class="modal fade" id="result-@item.Id.ToString("N")" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-scrollable modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="staticBackdropLabel">Preise für @(item.ProductName ?? item.CrawlUrl.ToString())</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            @Html.Raw(item.ResultTableHtml)
                        </div>
                    </div>
                </div>
            </div>
        }

    }
</div>